@page "/allusers"
@model Korepetycje_Matematyka.Pages.AllUsersModel
@{
}
<h1>Konta użytkowników</h1><hr /><hr />
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Login</th>
            <th>Password</th>
            <th>Opis</th>
            <th>Numer</th>
            </thead>
    <tbody>
        @foreach(var item in Model.Accounts)
        {
            <tr>
            <td>@item.Id</td>
            <td>@item.Login</td>
            <td>@item.Password</td>
            <td>@item.Desc</td>
            <td>@item.PhoneNumber</td>
            <td><a asp-page="Edit" asp-route-id="@item.Id">Edit</a></td>
            </tr>
        }
    </tbody>
</table>