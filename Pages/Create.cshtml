@page "/create"
@model Korepetycje_Matematyka.Pages.CreateModel
@{
}
<h5 class="bg-primary text-white text-center p-2">Dodaj użytkownika</h5>
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label>Imię i Nazwisko</label>
        <input name="UserName" class="form-control" value="@Model.UserName" />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input name="Email" class="form-control" value="@Model.Email" />
    </div>
    <div class="form-group">
        <label>Hasło</label>
        <input name="Password" class="form-control" value="@Model.Password" />
    </div>
    <div class="py-2">
        <button type="submit" class="btn btn-primary">Submit</button>
        <a class="btn btn-secondary" asp-page="list">Back</a>
    </div>
</form>
