         <input asp-for="NewUser.Password" class="form-control"/>
          <span asp-validation-for="NewUser.Password"></span>
         </div>
             <div class="mb-3">
         <label asp-for="NewUser.PhoneNumber">Numer Telefonu</label>
         <input asp-for="NewUser.PhoneNumber" class="form-control"/>
      <span asp-validation-for="NewUser.PhoneNumber"></span>    
     </div>
