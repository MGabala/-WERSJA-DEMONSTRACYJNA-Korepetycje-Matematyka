@page "/Login"
@model Korepetycje_Matematyka.Pages.LoginModel
@{ ViewData["Title"] = "Login page";
}
<div class="row">
  <div class="col-md-3">
     <form method="post">
         <div class="mb-3">
         <label asp-for="TryLogin.Login">Login</label>
         <input asp-for="TryLogin.Login" class="form-control"/>
         </div>
            <div class="mb-3">
         <label asp-for="TryLogin.Password">Password</label>
         <input asp-for="TryLogin.Password" class="form-control"/>
         </div>
         <button class="btn btn-success">Zaloguj się</button>
     </form>
  </div>
</div>